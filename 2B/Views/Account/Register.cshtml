
@model _2B.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class=" container-fluid textBlock">
    <div class="row">
        <div class="col">
            <h4>Регистрация пользователя</h4>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div>
                @Html.Label("Электронный адрес")
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div class=" input-group mb-2 justify-content-center">
                <div class="input-group-prepend">
                    <div class="input-group-text">E-mail</div>
                </div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div>
                @Html.Label("Год рождения")
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div class=" input-group mb-2 justify-content-center">
                <div class="input-group-prepend">
                    <div class="input-group-text">Year</div>
                </div>
                @Html.TextBoxFor(m => m.UserAge, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            @Html.ValidationMessageFor(m => m.UserAge, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div>
                @Html.Label("Пароль")
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div class=" input-group mb-2 justify-content-center">
                <div class="input-group-prepend">
                    <div class="input-group-text">Password</div>
                </div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div>
                @Html.Label("Подтверждение пароля")
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col">
            <div class=" input-group mb-2 justify-content-center">
                <div class="input-group-prepend">
                    <div class="input-group-text">Password</div>
                </div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <div>
                <input class="btn btn-success" type="submit" value="Регистрация" />
            </div>
        </div>
    </div>
</div>
}


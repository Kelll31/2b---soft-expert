@using System.Web.Optimization;
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 2B</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light " style="background-color: rgba(227, 254, 253, 0.90);">
        @Html.ActionLink(" 2B","Index","Home", new { area = ""}, new {@class = "navbar-brand"})
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink(" Главная страница", "Index", "Home", null, new {@class= "nav-link"})
                </li>   
                <li class="nav-item">
                    @Html.ActionLink("Информация", "About", "Home", null, new {@class = "nav-link"})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Контакты", "Contact","Home", null, new {@class = "nav-link"})
                    
                </li>
                <li class="nav-item">
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
        
        <footer>
            <div class="footerStyle">
                <hr />
                <p>&copy; @DateTime.Now.Year - 2B</p>
            </div>
            
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>